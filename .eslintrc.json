{
  // beware: eslint cannot read this json file if you add a comma at the end of an array
    "root": true,
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "parserOptions": {
          "project": [
            "./projects/ngresizable/tsconfig.lib.json"
          ],
          "createDefaultProgram": true
        },
        "plugins": [], 
        "extends": [  // (note each rule set overrides rule sets listed it)
          "eslint:recommended",                   // base set of recommended rules for eslint
          "plugin:@typescript-eslint/recommended-requiring-type-checking", // refinement of eslint:recommended for typescript
          "plugin:@typescript-eslint/recommended",  // refinement of eslint:recommended for typescript
          "plugin:@angular-eslint/recommended",  // angular rules recommended by the eslint team
                                         // (see node_modules\@angular-eslint\eslint-plugin\dist\configs\recommended.json)
          "plugin:@angular-eslint/recommended--extra",  
          "plugin:@angular-eslint/template/process-inline-templates" // ditto
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off", // Suppress to reduce warnings generated by existing code
          "@typescript-eslint/no-explicit-any": "off",    // Suppress unwanted "any" rule from typescript-eslint/recommended
         
          "@typescript-eslint/no-inferrable-types": [
            "warn",                     // changed from error to warning as I don't think it does any real harm
            {"ignoreParameters": true}  
          ],

          // suppress rules about "any" from @typescript-eslint/recommended-requiring-type-checking to reduce warnings in existing code
          "@typescript-eslint/no-unsafe-assignment": "off",
          "@typescript-eslint/no-unsafe-call": "off",
          "@typescript-eslint/no-unsafe-member-access": "off",
          "@typescript-eslint/no-unsafe-return": "off",

          // suppressed as it occurs in existing code and I think is a very trivial issue:
          "prefer-const": "off"
         }
      }
    ]
}
